{
  "name": "@apexdevtools/sfdx-auth-helper",
  "version": "2.0.0",
  "description": "Salesforce authentication utilities",
  "author": {
    "name": "Apex Dev Tools Team",
    "email": "apexdevtools@gmail.com",
    "url": "https://github.com/apex-dev-tools"
  },
  "main": "./lib/src/index.js",
  "license": "BSD-3-Clause",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf ./lib/",
    "commit": "cz",
    "hooks:uninstall": "husky uninstall",
    "lint": "eslint ./src/ --fix",
    "prepare": "husky install",
    "test": "jest --coverage",
    "test:pack": "webpack --mode production --devtool hidden-source-map",
    "test:watch": "jest --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/apex-dev-tools/sfdx-auth-helper.git"
  },
  "keywords": [
    "salesforce",
    "sfdx-core"
  ],
  "bugs": {
    "url": "https://github.com/apex-dev-tools/sfdx-auth-helper/issues"
  },
  "homepage": "https://github.com/apex-dev-tools/sfdx-auth-helper#readme",
  "packageManager": "pnpm@8.1.1",
  "dependencies": {
    "@salesforce/core": "^3.34.6",
    "jsforce": "^1.11.0"
  },
  "devDependencies": {
    "@ryansonshine/commitizen": "^4.2.8",
    "@ryansonshine/cz-conventional-changelog": "^3.3.4",
    "@salesforce/ts-sinon": "^1.4.6",
    "@types/jest": "^29.5.0",
    "@types/jsforce": "^1.11.0",
    "@types/node": "^18.15.11",
    "@types/sinon": "^10.0.13",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "eslint": "^8.37.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.1",
    "prettier": "^2.8.7",
    "sinon": "^15.0.3",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5",
    "webpack": "^5.78.0",
    "webpack-cli": "^5.0.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/@ryansonshine/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.ts": "eslint --cache --cache-location .eslintcache --fix"
  }
}
